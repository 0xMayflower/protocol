{
  "name": "@workhard/protocol",
  "description": "Smart contracts for the Workhard protocol",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/workhard-finance/protocol"
  },
  "keywords": [
    "workhard",
    "defi",
    "metaverse",
    "cryptojob"
  ],
  "files": [
    "contracts",
    "src",
    "dist"
  ],
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "test": "hardhat test",
    "hardhat": "hardhat",
    "deploy:rinkeby": "hardhat run scripts/deploy.ts --network rinkeby",
    "deploy:hardhat": "hardhat run scripts/deploy.ts --network hardhat",
    "clean": "rimraf src; rimraf dist",
    "precompile": "yarn clean",
    "compile": "hardhat compile",
    "postcompile": "yarn gen-ts",
    "gen-ts": "typechain --target ethers-v5 --outDir src artifacts/contracts/**/*[!dbg].json && tsc --build tsconfig.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.7",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.0-solc-0.7 ",
    "@uniswap/v2-core": "^1.0.1",
    "dotenv": "^8.2.0"
  },
  "lint-staged": {
    "{scripts,test,contracts}/**/*.{js,ts,sol}": [
      "prettier --write"
    ]
  }
}
